\documentclass[margin]{resume}
\usepackage{graphicx}
\usepackage{multicol}

\begin{document}

\name{\Huge{Sebastian Ruml}}

\begin{resume}

\vspace{10mm}

    %---------------------------------------------------------------------------------------------
    % Contact
    %---------------------------------------------------------------------------------------------
    \section{\mysidestyle \textbf{\large{CONTACT}}}

    \textbf{NAME}: <%= data['contact']['name'] %>\\
    \textbf{EMAIL}: <%= data['contact']['email'] %>\\
    \textbf{SITE}: <%= data['contact']['site'] %>\\
    \textbf{GITHUB}: <%= data['contact']['github'] %>

\sectionline

    %---------------------------------------------------------------------------------------------
    % Summary
    %---------------------------------------------------------------------------------------------
    \section{\mysidestyle \textbf{\large{SUMMARY}}}

    <% i = 0 %>
    <% data['summary']['short'].each do |line| %>
      <%= line %> \\\\
    <% end %>

\sectionline

    %---------------------------------------------------------------------------------------------
    % Work Experience
    %---------------------------------------------------------------------------------------------
    \section{\mysidestyle \textbf{\large{WORK EXPERIENCE}}}

    <% data['work'].each do |company| %>
      \textbf{\large{<%= company['where']['title'] %>}} \hfill <%= company['where']['location'] %> \\\\
      <% company['positions'].each do |position| %>
        \textsl{<%= position['title'] %>} \hfill  <%= position['when'] %> \\\\
        <%= position['description'] %>

      <% end %>

      \textbf{Projects}

      <% company['projects'].each do |project| %>
        \textsl{<%= project['title'] %>}

        \begin{list2}        
        <% project['description'].each do |line| %>
        \item <%= line %> 
        <% end %>
        \end{list2}        

      <% end %>

    <% end %>


\sectionline

    %---------------------------------------------------------------------------------------------
    % Projects
    %---------------------------------------------------------------------------------------------
    \section{\mysidestyle \textbf{\large{PROJECTS}}}

    <% data['projects'].each do |project| %>
      \textbf{\large{<%= project['name'] %>}} \\
      <%= project['description'] %>

    <% end %>


\sectionline

    %---------------------------------------------------------------------------------------------
    % Skills
    %---------------------------------------------------------------------------------------------
    \section{\mysidestyle \textbf{\large{SKILLS}}}

    \textsl{ Programming Languages }
    
        \begin{list2}
            <% data['skills'][0]['shortlist'].each do |item| %>
                \item <%= item %>
            <% end %>
        \end{list2}

    \textsl{ Technologies/Frameworks }
        \begin{list2}
            <% data['skills'][1]['shortlist'].each do |item| %>
                \item <%= item %>
            <% end %>
        \end{list2}

    \textsl{ Tools }
        \begin{list2}
            <% data['skills'][2]['shortlist'].each do |item| %>
                \item <%= item %>
            <% end %>
        \end{list2}

    \textsl{ Operating Systems }
        \begin{list2}
            <% data['skills'][3]['shortlist'].each do |item| %>
                \item <%= item %>
            <% end %>
        \end{list2}

\sectionline

    %---------------------------------------------------------------------------------------------
    % Education
    %---------------------------------------------------------------------------------------------
    \section{\mysidestyle \textbf{\large{EDUCATION}}}

    <% data['education'].each do |school| %>
    \textbf{\large{<%= school['where']['name'] %>}} \hfill <%= school['where']['location'] %> \\
    \textsl{<%= school['what']['title'] %>} \hfill <%= school['when'] %> \\
    <%= school['description'] %>
    <% end %>

\sectionline

    %---------------------------------------------------------------------------------------------
    % Languages
    %---------------------------------------------------------------------------------------------
    \section{\mysidestyle \textbf{\large{LANGUAGES}}}

    \begin{list2}
        <% data['languages'].each do |lang| %>        
        \item <%= lang %>
        <% end %>  
    \end{list2}

\sectionline

    %---------------------------------------------------------------------------------------------
    % Professional Interests
    %---------------------------------------------------------------------------------------------
    \section{\mysidestyle \textbf{\large{PROFESSIONAL INTERESTS}}}

    \begin{list2}
        \item <%= data['professional_interests'] %>
    \end{list2}

\sectionline

    %---------------------------------------------------------------------------------------------
    % Interests
    %---------------------------------------------------------------------------------------------
    \section{\mysidestyle \textbf{\large{INTERESTS}}}

    
    \begin{list2}
        \item <%= data['interests'] %>
    \end{list2}




\end{resume}
\end{document}
