\documentclass[margin]{resume}
\usepackage{graphicx}

\begin{document}

\name{\Huge{Sebastian Ruml}}

\begin{resume}

\vspace{15mm}

    %---------------------------------------------------------------------------------------------
    % Contact
    %---------------------------------------------------------------------------------------------
    \section{\mysidestyle \textbf{\large{CONTACT}}}

    \textbf{NAME}: <%= data['contact']['name'] %>\\
    \textbf{EMAIL}: <%= data['contact']['email'] %>\\
    \textbf{SITE}: <%= data['contact']['site'] %>\\
    \textbf{GITHUB}: <%= data['contact']['github'] %>

\sectionline

    %---------------------------------------------------------------------------------------------
    % Summary
    %---------------------------------------------------------------------------------------------
    \section{\mysidestyle \textbf{\large{SUMMARY}}}

    <% data['summary'].each do |line| %>
      <%= line %> \\\\
    <% end %>

\sectionline

    %---------------------------------------------------------------------------------------------
    % Work Experience
    %---------------------------------------------------------------------------------------------
    \section{\mysidestyle \textbf{\large{WORK EXPERIENCE}}}

    <% data['work'].each do |company| %>
      \textbf{\large{<%= company['where']['title'] %>}} \hfill <%= company['where']['location'] %> \\
      \textsl{<%= company['what']['title'] %>} \hfill  <%= company['when'] %> \\
      <%= company['description'] %>

      \textbf{Projects}

      <% company['projects'].each do |project| %>
        \textsl{<%= project['title'] %>} \\
        <%= project['description'] %> \\

      <% end %>

    <% end %>


\sectionline

    %---------------------------------------------------------------------------------------------
    % Projects
    %---------------------------------------------------------------------------------------------
    \section{\mysidestyle \textbf{\large{PROJECTS}}}

    <% data['projects'].each do |project| %>
      \textbf{\large{<%= project['name'] %>}} \\
      <%= project['description'] %> \\
    <% end %>


